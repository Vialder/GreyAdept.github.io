<script>
	const audio = document.createElement('audio'); audio.id = "audio";
	audio.src = 'https://media.tyhjyydenvalu.com/Antenna%20Roots%20MASTER%20MP3%201H%20LOOP.mp3';
	const audioButton = document.getElementById("Capa_1");
	const pauseButton = document.getElementById("pausebutton");
	const playButton = document.getElementById("playbutton");
	//audio.play();
	playButton.style.visibility = "visible";
	pauseButton.style.visibility = "hidden";
	
	audioButton.addEventListener('click', () => {
		console.log("playing...");
		togglePause();
	});
	
	function togglePause() {
		if (audio.paused) {
			audio.play();
			playButton.style.visibility = "hidden";
			pauseButton.style.visibility = "visible";
		}
		else {
			audio.pause();
			playButton.style.visibility = "visible";
			pauseButton.style.visibility = "hidden";
		}
	}

	function pauseStop() {
		fadeVolOut(1);	
	}


	function fadeVolIn(newPercent){
		console.log("fading in!")
		if(newPercent < 1){
		audio.volume = newPercent;
		setTimeout(fadeVolIn,2, newPercent+0.001);
		}
		else{
			audio.volume = 1;
		}
	}
	function fadeVolOut(newPercent){
		console.log("fading out!")
		if(newPercent > 0){
		audio.volume = newPercent;
		setTimeout(fadeVolOut,2, newPercent-0.001);
		}
		else{
			audio.volume = 0;
		}
	}
	
</script>

